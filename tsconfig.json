{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}
